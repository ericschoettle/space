<!DOCTYPE html>
<html>
  <head>
    <title>Space</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <br>
    <div class="container">
      <nav class="navbar navbar-default">
        <div class="container-fluid">
          <div class="navbar-header">
            <a class="navbar-brand" href="/">Space</a>
          </div>
          <div class="collapse navbar-collapse">
            <ul class="nav navbar-nav">
              <% if current_user %>
                <li><%= link_to "Sign Out", destroy_user_session_path, method: :delete %><li>
              <% else %>
                <li><%= link_to "Sign In", new_user_session_path %></li>
                <li><%= link_to "Sign Up", new_user_registration_path %></li>
              <% end %>
            </ul>
            <ul class="nav navbar-nav navbar-right">
              <li><a href="/order_products">
                <b>Cart:</b> <span class="cart-count"><%= current_order.order_products.count %></span> items,
                 $<span class="cart-total"><%= current_order.total_price.to_i %></span> million
              </a></li>
            </ul>
          </div>
        </div>
      </nav>
      <p class="notice"><%= notice %></p>
      <p class="alert"><%= alert %></p>
      <%= yield %>
    </div>
    <%= link_to "Log in", new_user_session_path, id: "test_login", remote: true %>
  </body>
</html>
